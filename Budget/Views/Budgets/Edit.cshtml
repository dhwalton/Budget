@model Budgeter.Models.BudgetViewModel

@{
    ViewBag.Title = "Edit";
}
<div class="edit-header">
    <span>@Model.Budget.Name</span>
    <button id="btn-edit-budget"><i class="fa fa-pencil"></i></button>
</div>

 <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div>
                    <h4>Income</h4>
                    @Html.Partial("_BudgetItemList", Model.IncomeBudgetItems)
                </div>
                <hr />
                <div>
                    <h4>Expenses</h4>
                    @Html.Partial("_BudgetItemList", Model.ExpenseBudgetItems)
                </div>
            </div>
            <div class="col-md-6">
                <div class="radio-container">
                    <input type="radio" name="item-type" class="radio-income" /> Income
                    <input type="radio" name="item-type" class="radio-expense" checked /> Expense
                </div>
                <div id="add-budget-income">
                    <h4>Add Budget Item - Income</h4>
                    @using (Html.BeginForm("AddBudgetItem", "Budgets", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("BudgetId", Model.Budget.Id)
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Item Name")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Name")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Amount")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Amount")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Frequency")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Frequency", "", null, new { @type="number", @min = "1", @max="52" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Category")
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("CategoryId", ViewBag.IncomeCategories as SelectList)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div id="add-budget-expense">
                    <h4>Add Budget Item - Expense</h4>
                    @using (Html.BeginForm("AddBudgetItem", "Budgets", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("BudgetId", Model.Budget.Id)
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Item Name")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Name")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Amount")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Amount")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Frequency")
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("Frequency", "", null, new { @type = "number", @min = "1", @max = "52" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.Label("Category")
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("CategoryId", ViewBag.ExpenseCategories as SelectList)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to Household", "Edit", "Households", new { id = Model.Budget.HouseholdId }, null)
    </div>

<div class="form-horizontal" id="edit-budget-modal">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="Id" value="@Model.Budget.Id" />
        <input type="hidden" name="HouseholdId" value="@Model.Budget.HouseholdId" />
        <div class="form-group">
            @Html.LabelFor(model => model.Budget.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Name", Model.Budget.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Budget.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }
</div>





    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/js/Budget.js")
    }
