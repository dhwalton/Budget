@model Budgeter.Models.HouseholdListViewModel
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (Model.Invites.Count() > 0)
    {
        @Html.Partial("_UserInvites", Model.Invites)
    }

    <h3>My Households</h3>
    @if (Model.Households.Count() > 0)
    {
        
        <table class="table">
            <tr>
                <th>
                    Owner
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
    
        @foreach (var item in Model.Households)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Owner.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
        }
        </table>
    }
    else
    {
        <h4 class="alert-danger">You are not a member of any household!</h4>
    }
